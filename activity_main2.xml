<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fajri4a2"
    android:padding="25dp"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=" Cara Menghitung Luas dan Keliling Persegi Panjang"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/Panjang"
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:hint="Panjang"
        android:inputType="number" />

    <EditText
        android:id="@+id/Lebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lebar"
        android:inputType="number"/>


    <EditText
        android:id="@+id/HasilLuas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hasil Luas"
        android:inputType="number"/>

    <EditText
        android:id="@+id/Hasilkeliling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hasil Keliling"
        android:inputType="number"/>

</LinearLayout>